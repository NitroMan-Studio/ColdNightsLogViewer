<Window x:Class="ColdNightsLogViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColdNightsLogViewer"
        mc:Ignorable="d"
        Title="Cold Nights Log Viewer" Height="450" Width="800"
        Icon="Assets/ico2.png">

    <!-- TYLKO konwerter, bez LogStyleSelector -->
    <Window.Resources>
        <local:LogColorConverter x:Key="LogColorConverter" />
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Pasek na górze -->
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button x:Name="BtnOpen"
                    Content="Open log 📂"
                    Width="120"
                    Margin="0 0 10 0"
                    Click="BtnOpen_Click"/>
            
            <CheckBox x:Name="ChkInfo" Content="Info" IsChecked="True" Margin="10 0"
                      Checked="FilterChanged" Unchecked="FilterChanged"/>
            <CheckBox x:Name="ChkWarn" Content="Warning" IsChecked="True" Margin="10 0"
                      Checked="FilterChanged" Unchecked="FilterChanged"/>
            <CheckBox x:Name="ChkErr" Content="Error" IsChecked="True" Margin="10 0"
                      Checked="FilterChanged" Unchecked="FilterChanged"/>
            
            <TextBlock Text="🔍"
                       FontSize="16"
                       VerticalAlignment="Center"
                       Margin="0 0 -15 0"/>
            
            <TextBox x:Name="TxtSearch"
                       Width="180"
                       Margin="15 0 0 0"
                       VerticalAlignment="Center"
                       KeyDown="TxtSearch_KeyDown"
                       TextChanged="TextSearch_TextChanged"/>

            <TextBlock x:Name="TxtPath"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Lista logów -->
        <ListBox x:Name="ListLogs"
                 Grid.Row="1"
                 Margin="0 10 0 0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border x:Name="RowBorder"
                            Padding="2"
                            Background="White">
                        <TextBlock Text="{Binding}"
                                   Foreground="{Binding Converter={StaticResource LogColorConverter}}"/>
                    </Border>

                    <DataTemplate.Triggers>

                        <!-- ERROR -->
                        <DataTrigger Binding="{Binding}" Value="[Error]">
                            <Setter TargetName="RowBorder" Property="Background" Value="#FFFFD7D7"/> 
                        </DataTrigger>

                        <!-- WARNING -->
                        <DataTrigger Binding="{Binding}" Value="[Warning]">
                            <Setter TargetName="RowBorder" Property="Background" Value="#FFFFF8D0"/>
                        </DataTrigger>

                    </DataTemplate.Triggers>
                </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>
    </Grid>

</Window>